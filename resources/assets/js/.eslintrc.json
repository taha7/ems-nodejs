{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
    // ,
    // "node": true,
    // "jest": true,
    // "mocha": true
  },
  "extends": ["airbnb-base", "prettier", "standard-jsx"],
  "plugins": ["prettier", "react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "func-names": "off",
    "eqeqeq": "off",
    "class-methods-use-this": "off",
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "no-unused-expressions": "off",
    "guard-for-in": "off"
  }
}
